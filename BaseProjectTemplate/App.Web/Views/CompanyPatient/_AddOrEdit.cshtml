@model App.Web.ViewModels.CompanyPatient.PatientAddOrEditVM

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input asp-for="Id" type="hidden" />
<div class="row">
	<div class="form-group col">
		<label asp-for="EmployeeCode" class="control-label">Mã nhân viên</label>
		<input asp-for="EmployeeCode" class="form-control" />
		<span asp-validation-for="EmployeeCode" class="text-danger"></span>
	</div>
	<div class="form-group col">
		<label asp-for="CompanyId" class="control-label">Công ty</label>
		<select asp-for="CompanyId" class="form-control js-select-add-company">
			<option value="">--- Chọn công ty ---</option>
			<vc:list-company seleteted-id="null"></vc:list-company>
		</select>
		<span asp-validation-for="CompanyId" class="text-danger"></span>
	</div>
	<div class="form-group col">
		<label asp-for="DepartmentId" class="control-label">Phòng ban/đơn vị</label>
		<select asp-for="DepartmentId" class="form-control js-select-add-department">
			<option value="" class="d-none-value-add">--- Chọn phòng ban ---</option>
			<vc:list-department seleteted-id="null"></vc:list-department>
		</select>
		<span asp-validation-for="DepartmentId" class="text-danger"></span>
	</div>
</div>
<div class="row">
	<div class="form-group col">
		<label asp-for="FullName" class="control-label">Họ tên</label>
		<input asp-for="FullName" class="form-control" />
		<span asp-validation-for="FullName" class="text-danger"></span>
	</div>
	<div class="form-group col">
		<div class="d-flex justify-content-between">
			<label class="control-label">Ngày sinh</label>
			<label>(<input type="checkbox" class="js-year-only" /> chỉ có năm sinh)</label>
		</div>
		<input asp-for="DoB" class="form-control" type="date" />
		<input asp-for="YoB" class="form-control fake-d-none" />
		<span asp-validation-for="DoB" class="text-danger"></span>
		<span asp-validation-for="YoB" class="text-danger"></span>
	</div>
	<div class="form-group col">
		<label asp-for="Gender" class="control-label d-block">Giới tính</label>
		<div class="mt-3">
			<label style="font-weight:400">
				<input asp-for="Gender" value="@Gender.MALE" type="radio" checked /> Nam
			</label>
			&nbsp;&nbsp;
			<label style="font-weight:400">
				<input asp-for="Gender" value="@Gender.FEMALE" type="radio" /> Nữ
			</label>
		</div>
	</div>
</div>

<div class="row">
	<div class="form-group col">
		<label asp-for="IdentityCode" class="control-label">Số CMND/CCCD</label>
		<input asp-for="IdentityCode" class="form-control" />
		<span asp-validation-for="IdentityCode" class="text-danger"></span>
	</div>
	<div class="form-group col">
		<label asp-for="IdentityDoI" class="control-label">Ngày cấp</label>
		<input asp-for="IdentityDoI" class="form-control" type="date" />
		<span asp-validation-for="IdentityDoI" class="text-danger"></span>
	</div>
	<div class="form-group col">
		<label asp-for="IdentityPoI" class="control-label">Nơi cấp</label>
		<input asp-for="IdentityPoI" class="form-control" />
		<span asp-validation-for="IdentityPoI" class="text-danger"></span>
	</div>
</div>
<div class="row">
	<div class="form-group col-8">
		<label asp-for="Address" class="control-label">Nơi ở hiện tại</label>
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	<div class="form-group col-4">
		<label asp-for="DigitalInfo" class="control-label">Số</label>
		<input asp-for="DigitalInfo" class="form-control" />
		<span asp-validation-for="DigitalInfo" class="text-danger"></span>
	</div>
</div>
