@model App.Web.ViewModels.User.UserAddOrEditVM

@{
	ViewData["Title"] = $"Cập nhật tài khoản {Model.Username}";
}

<div class="row">
	<div class="col-12">
		<div class="small mb-2">
			Cập nhật lần cuối lúc @Model?.UpdatedDate.ToDMYHM()
		</div>
		<form asp-action="Edit" autocomplete="off">
			<input asp-for="Id" type="hidden" />
			<input asp-for="Username" type="hidden" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<partial name="_AddOrEdit">
			<div class="form-group">
				<button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Lưu</button>
				<button type="reset" class="btn btn-default"><i class="fa fa-undo"></i> Nhập lại</button>
			</div>
		</form>
	</div>
</div>
<partial name="_BackToList" />
@section scripts{
	<script src="~/js/user/create-edit-user.js" asp-append-version="true"></script>
}
